<h1>Plots</h1>

<% @plots.each do |plot| %>
  <div id="plot-<%= plot.id %>">
    <p>Plot number: <%= plot.number %></p>
      <ol>
        <% plot.plants.each do |plant| %>
          <li> <%= plant.name %> <%= link_to "Remove #{plant.name}", plots_path %> </li>
        <% end %>
      </ol>
  </div>
<% end %>
